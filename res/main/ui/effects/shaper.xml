<plugin resizable="true">
	<grid rows="4" cols="6">
		<!-- row 1 -->
		<void />
		<label text="labels.chan.in" />
		<label text="labels.chan.out" />
		<label text="RMS" />
		<label text="Linear" />
		<label text="Logarithmic" />
		
		<!-- row 2 -->
		<group text="shaper">
			<grid rows="3" cols="4">
				<label text="H Shift" />
				<label text="V Shift" />
				<label text="Low Scale" />
				<label text="High Scale" />

				<knob id="hshift" pad.h="6" pad.v="4"/>
				<knob id="vshift" pad.h="6" pad.v="4"/>
				<knob id="bscale" pad.h="6" pad.v="4"/>
				<knob id="tscale" scolor="wet" pad.h="6" pad.v="4"/>

				<value id="hshift" width.min="56" sline="true"/>
				<value id="vshift" width.min="56" sline="true"/>
				<value id="bscale" width.min="56" sline="true"/>
				<value id="tscale" width.min="56" sline="true"/>
			</grid>
		</group>
		<cell rows="3">
			<ledmeter vexpand="true" angle="1" bg.inherit="true">
				<ledchannel id="min_l" min="-72 db" max="+6 db" log="true" type="rms_peak" peak.visibility="true" value.color="left_in"/>
				<ledchannel id="min_r" min="-72 db" max="+6 db" log="true" type="rms_peak" peak.visibility="true" value.color="right_in"/>
			</ledmeter>
		</cell>
		<cell rows="3">
			<ledmeter vexpand="true" angle="1" bg.inherit="true">
				<ledchannel id="mout_l" min="-72 db" max="+6 db" log="true" type="rms_peak" peak.visibility="true" value.color="left"/>
				<ledchannel id="mout_r" min="-72 db" max="+6 db" log="true" type="rms_peak" peak.visibility="true" value.color="right"/>
			</ledmeter>
		</cell>
		<cell rows="3">
			<ledmeter vexpand="true" angle="1" bg.inherit="true">
				<ledchannel id="rms_l" min="-12 db" max="12 db" log="true" balance="0 db" balance.visibility="true" type="peak" value.color="blue"/>
				<ledchannel id="rms_r" min="-12 db" max="12 db" log="true" balance="0 db" balance.visibility="true" type="peak" value.color="blue"/>
			</ledmeter>
		</cell>
		<cell rows="3">
			<graph width.min="256" height.min="256" expand="true">
				<origin hpos="-1" vpos="-1" visibility="false" />
				<axis min="0" max="1" angle="0" visibility="false" />
				<axis min="0" max="1" angle="0.5" visibility="false" />

				<ui:with color="graph_alt_2">
					<marker v="0.125" />
					<marker v="0.375" />
					<marker v="0.625" />
					<marker v="0.875" />
					<marker v="0.125" ox="1" oy="0" />
					<marker v="0.375" ox="1" oy="0" />
					<marker v="0.625" ox="1" oy="0" />
					<marker v="0.875" ox="1" oy="0" />
				</ui:with>
				<ui:with color="graph_alt_1">
					<marker v="0.25" />
					<marker v="0.75" />
					<marker v="0.25" ox="1" oy="0" />
					<marker v="0.75" ox="1" oy="0" />
				</ui:with>
				
				<marker v="0" ox="1" oy="0" dx=":_a_width" dy=":_a_height" color="graph_alt_1" width="2" smooth="true"/>
				
				<ui:with color="graph_sec">
					<marker v="0.5" />
					<marker v="0.5" ox="1" oy="0" />
				</ui:with>
				
				<mesh id="gr_lin" width="3" color="graph_mesh" smooth="true"/>
				
				<line
					sx="0" sy="0"
					x=":hshift * :bscale" y=":vshift * :bscale"
					width="2"
					smooth="true"
					color="graph_mesh" />
					
				<line
					sx="1" sy="1"
					x="1 + (:hshift - 1) * :tscale" y="1 + (:vshift - 1) * :tscale"
					width="2"
					smooth="true"
					color="graph_mesh" />
					
				<dot
					x.id="hshift" x.editable="true"
					y.id="vshift" y.editable="true"
					color="graph_mesh" bcolor="graph_mesh"/>
				
				<text x="0" y="1" halign="1" valign="-1" text="labels.chan.out" /> 
				<text x="1" y="0" halign="-1" valign="1" text="labels.chan.in" />
				<text x="0" y="0" halign="1" valign="1" text="0" />
				
				<text x="0.25" y="0" halign="1" valign="1" text="0.25" />
				<text x="0.5" y="0" halign="1" valign="1" text="0.5" />
				<text x="0.75" y="0" halign="1" valign="1" text="0.75" />
				<text x="0" y="0.25" halign="1" valign="1" text="0.25" />
				<text x="0" y="0.5" halign="1" valign="1" text="0.5" />
				<text x="0" y="0.75" halign="1" valign="1" text="0.75" />
			</graph>
		</cell>
		<cell rows="3">
			<graph width.min="256" height.min="256"  expand="true">
				<origin hpos="-1" vpos="-1" visibility="false" />
				<axis min="-72 db" max="0 db" angle="0" log="true" visibility="false" />
				<axis min="-72 db" max="0 db" angle="0.5" log="true"  visibility="false" />
			
				<ui:with color="graph_alt_2">
					<ui:for id="g" first="-66" last="-6" step="12">
						<marker v="${g} db" />
						<marker v="${g} db" ox="1" oy="0" />
					</ui:for>
				</ui:with>
				
				<ui:with color="graph_alt_1">
					<ui:for id="g" first="-60" last="-12" step="12">
						<marker v="${g} db" />
						<marker v="${g} db" ox="1" oy="0" />
					</ui:for>
				</ui:with>
				
				<marker v="0 db" ox="1" oy="0" dv="1" dx=":_a_width" dy=":_a_height" color="graph_alt_1" width="2" smooth="true"/>
				
				<ui:with color="graph_sec">
					<marker v="-36 db" />
					<marker v="-36 db" ox="1" oy="0" />
				</ui:with>
				
				<mesh id="gr_log" width="3" color="graph_mesh" smooth="true"/>
				
				<text x="-72 db" y="0 db" halign="1" valign="-1" text="labels.chan.in" /> 
				<text x="0 db" y="-72 db" halign="-1" valign="1" text="labels.chan.out" />
				<text x="0 db" y="0 db" halign="-1" valign="-1" text="graph.values.x:db" text:value="0" />
				
				<ui:for id="g" first="-60" last="-12" step="12">
					<text x="${g} db" y="0 db" halign="-1" valign="-1" text="${g}" />
					<text x="0 db" y="${g} db" halign="-1" valign="-1" text="${g}" />
				</ui:for>
			</graph>
		</cell>
		
		<!-- row 3 -->
		<grid rows="2" cols="3" spacing="4">
			<label text="Approximation" />
			<label text="labels.oversampling" />
			<void />
			
			<combo id="order" />
			<combo id="ovs" />
			<button id="listen" width.min="98" text="actions.listen" ui:inject="Button_cyan" height="19" />
		</grid>
		
		<!-- row 4 -->
		<group text="labels.signal">
			<grid rows="3" cols="4">
				<label text="labels.chan.input" />
				<label text="labels.signal.dry" />
				<label text="labels.signal.wet" />
				<label text="labels.chan.output" />

				<knob id="g_in" pad.h="6" pad.v="4"/>
				<knob id="dry" scolor="dry" pad.h="6" pad.v="4"/>
				<knob id="wet" scolor="wet" pad.h="6" pad.v="4"/>
				<knob id="g_out" pad.h="6" pad.v="4"/>

				<value id="g_in" width.min="56" sline="true"/>
				<value id="dry" width.min="56" sline="true"/>
				<value id="wet" width.min="56" sline="true"/>
				<value id="g_out" width.min="56" sline="true"/>
			</grid>
		</group>
	</grid>
</plugin>
